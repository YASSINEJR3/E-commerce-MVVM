@page
@model SqlLiteAmazonWebApp.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="flex justify-content-between mt-4">
    <h1 class="text-gray-500 mt-2">Last Results</h1>
    <form class="flex">
        <div>
            <select asp-for="ProductCategory" asp-items="Model.Categories">
                <option value="">All</option>
            </select>
        </div>
        <div class="flex">
            <input type="text" asp-for="SearchTerm" class="form-control" placeholder="Enter Product Name...">
            <button type="submit" class="btn btn-outline-primary ms-2">Search</button>
        </div>
    </form>
    <a asp-page="Create" class="btn btn-outline-success ms-5 justify-self-end">Product Management</a>
</div>


<div class="flex flex-wrap gap-5 mt-5">
    @foreach (var item in Model.Product)
    {
        <div class="bg-white border rounded-lg shadow-lg hover:shadow-xl transition duration-300 ease-in-out transform hover:scale-105 ">
            <div class="relative overflow-hidden rounded-t-lg">
                <img src="~/images/@item.ImageUrl" alt="@item.Name" class="w-full h-52 object-contain">
                <div class="absolute top-0 right-0 p-2 bg-success text-white text-xs font-semibold rounded-tr-lg">New</div>
            </div>
            <div class="p-4">
                <h3 class="text-xl font-semibold text-gray-800">@item.Name</h3>
                <p class="text-gray-600 mt-2 mb-2" style="width:350px;max-width:350px">@item.Description</p>
                <span class="badge bg-secondary">@item.Categorie.Name</span>
                <div class="align-items-center flex justify-content-between mt-4">
                    <p class="text-blue-600 font-semibold">$ @item.Price</p>
                    <div class="bg-warning rounded-pill text-center p-2 w-50">
                        <label class="text-white">Add to Cart</label>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
